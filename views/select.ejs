<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="application-name" content="GoodWill">
    <meta name="author" content="Danny Leviev">
    <link rel="icon" href="images/favicon.ico">
    <!-- Bootstrap core CSS -->
    <link href="bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <!-- Bootstrap theme -->
    <link href="bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet">
    <!-- My custom CSS file -->
    <link href="stylesheets/custom.css" rel="stylesheet">
  </head>

  <body role="document">
    <nav class="navbar navbar-inverse navbar-fixed-top nav-custom-color">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">GoodWill</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav"> 
            <li class="active"><a href="./select">Select</a></li>
            <li><a href="./hitMe">Hit me!!!</a></li>
            <li><a href="./askHelp">Ask Help</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <img src=<%= GLOBAL.userPicPath %> class="img-circle navBarImage">
              <a style="float: left; " href="./yourProfile"> <%= GLOBAL.userName %></a>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <div id="mainContainer" class="container-fluid">
      <div id="leftBar"> 
        <div class="panel-heading"></div>
      </div>
      <div id="middleBar">
        <% for(var j = 0; j < appData.length; j++){ %>
          <%for(var i = 0; i < appData[j].feeds.length; i++){ %>
            <div class="panel panel-primary feedBlock">
              <div class="panel-body feedBlockBody"> 
                <div>
                  <% var imagePath = appData[j].prfImagePath || 'images/defaultPersonImage.png'; %>
                  <img class= 'feedsImage' src=<%= imagePath %>>
                  <div class='feedsNameAndTime'>
                    <h5> <%= appData[j].name %> </h5>  
                    <h5> <%= appData[j].feeds[i].expDate %> <h5>
                  </div>
                </div>
                <div class='feedText'>
                  <h3><strong> <%= appData[j].feeds[i].title %> </strong></h3>
                  <p><%= appData[j].feeds[i].text %> </p>
                </div>
              </div>
              <% if(appData[j].feeds[i].comments.length > 0){ %>
              <div class='feedsCommentsContainer'>
                <% for(var n = 0; n < appData[j].feeds[i].comments.length; n++){ %>
                  <div>
                    <% var imagePath = 'images/defaultPersonImage.png'; %>
                    <% for(m = 0; m < appData.length; m++){ %>
                      <% if(appData[m].name == appData[j].feeds[i].comments[n].commenterName){ %>
                        <% imagePath = appData[m].prfImagePath; }%>
                    <% } %>
                    <img class= 'feedsCommentImage' src= <%= imagePath %>>
                    <h5 class='feedsCommentName'> <%= appData[j].feeds[i].comments[n].commenterName %> </h5>
                    <p class='feedsCommentText'> <%= appData[j].feeds[i].comments[n].text %> </p>
                  </div>
                <% }; %>
              </div>
              <% }; %>
            </div>
          <% }; %>
        <% }; %>
      </div>  
      <div id="rightBar">
        <div class="panel-heading">
        </div>
      </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="jquery/dist/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="bootstrap/dist/js/bootstrap.js"></script>
  </body>
</html>