<!DOCTYPE html>
<html lang="en">
  <head>
    <% include header %>
  </head>
  <body role="document">
    <% include navBar %>
    <% include flashMessages %>
    <div id="mainContainer" class="container-fluid askHelpMainDiv">
        <h1 style="margin-bottom: 40px; text-decoration: underline;"> Ceate New Feed: </h1>
        <form action="/askHelp" role="form" method="post">
          <div class="row">
            <div class="col-md-3">
              <div class="form-group">
                <label for="Name">Phone number for contact:</label>
                <input type="text" class="form-control" name="phoneNumber" placeholder="<+972-xx-xxx-xxx>">
              </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3">
              <div class="form-group">
                <label for="expirationDate">Expiration Date:</label>
                <input type="date" class="form-control" name="expirationDate">
              </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3">
              <div class="form-group">
                <div class="form-group">
                  <label for="<label for=">Assign to:</label>
                  <input type="text" class="form-control" name="assignedTo" placeholder="< Enter User Name >">
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-5">
              <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" class="form-control" name="title" placeholder="< Enter Title >">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-7">
              <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="text" type="input" name="text" rows="3" class="form-control" placeholder="< Enter Description >"></textarea>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-default">Send</button>
        </form>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="jquery/dist/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="bootstrap/dist/js/bootstrap.js"></script>
    <!--Dynamically change the active tab of the navBar -->
    <script> document.getElementById('askHelpListItem').className = "active"; </script>
  </body>
</html>